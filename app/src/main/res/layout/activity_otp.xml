<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity"

    android:background="@color/white"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@color/teal_200"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/otplogo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your otp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/otplogo"
        android:padding="20dp"
        android:fontFamily="serif-monospace"
        android:textColor="#787666"
        android:textStyle="bold"
        android:id="@+id/textheading"

        />

    <EditText
        android:id="@+id/otptext"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter your otp"


        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/otptext"
        android:layout_marginTop="20dp"
        android:id="@+id/otpsubmit"
        android:layout_centerHorizontal="true"
        android:text="submit"
        android:padding="10dp"

        android:textAllCaps="false"
        android:background="@color/teal_200"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@id/otpsubmit"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="10dp"
android:id="@+id/otpprogressbar"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/changeno"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:text="Didn't receive otp? change number here "
        android:textColor="#A7938989"
        android:textSize="15dp" />


</RelativeLayout>